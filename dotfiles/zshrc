# alias realpath='grealpath'

# FLush DNS
alias flushdns='sudo killall -HUP mDNSResponder'

# Some encrypt/decrypt functions
function secret () {
        output=`pwd`/"${1}".$(date +%s).enc
        gpg --encrypt --armor --output ${output} --recipient 0xC813574E80775996 "${1}" && echo "${1} -> ${output}"
}

function reveal () {
        output=$(echo "${1}" | rev | cut -c16- | rev)
        gpg --decrypt --output ${output} "${1}" && echo "${1} -> ${output}"
}

# Portable dotfiles config installer
function dotdrop () {
        export DOTDROP_DIR=~/src/dotfiles
        gpg --decrypt --quiet $DOTDROP_DIR/.secrets.gpg >$DOTDROP_DIR/.secrets

        eval $(grep -v "^#" $DOTDROP_DIR/.secrets) $DOTDROP_DIR/dotdrop.sh $@
}

alias eme='
export DISPLAY=:0.0
export LIBGL_ALWAYS_INDIRECT=1
setxkbmap -layout us
setsid emacs
exit
'

# Consistency
function macupdate () {
  if [ -e ~/src/mac-dev-playbook ]
  then
    cd ~/src/mac-dev-playbook
    ansible-playbook -i inventory --ask-become-pass main.yml
  else
    echo "Can't find mac-dev-playbook - do you need to clone the repo?"
  fi
}

# Vagrant VMWare config
export VAGRANT_VMWARE_CLONE_DIRECTORY=~/Vagrant/vmware/

export VAGRANT_HOME=~/Vagrant

alias dockerimagewipe="for i in `docker images | grep "<none>.*<none>" | cut -c79-91 | tr -d " " `; do;  docker rmi $i; done"

function mkpb () {
  for i in files templates tasks handlers vars defaults meta
  do
    mkdir -p  ${1}/${i}
  done

  echo -e "---\n" > ${1}/tasks/main.yml
}

# Enable direnv
eval "$(direnv hook zsh)"

# Start GPG agent with ssh-agent emulation mode
GPG_TTY=$(/usr/bin/tty)
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
export GPG_TTY SSH_AUTH_SOCK
gpgconf --launch gpg-agent


# Cmdline syntax highlighting.
# Requires `brew install zsh-syntax-highlighting`.
if [ -e /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]
then
  source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

# History search like Fish shell.
# Requires `brew install zsh-history-substring-search`
if [ -e /usr/local/share/zsh-history-substring-search/zsh-history-substring-search.zsh ]
then
  source /usr/local/share/zsh-history-substring-search/zsh-history-substring-search.zsh
fi

# Syntax highlighting for 'less', if lesspipe and source-highlighting are installed via homebrew.
